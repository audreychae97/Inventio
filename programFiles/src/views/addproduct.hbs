{{> header }}
<script type="text/javascript" src="../routes/addproduct.js"></script>
<div class="jumbotron">
    <h1 class="display-4">Add a new product type</h1>
    <p class="lead">Adding a new type of product to inventory.</p>
</div>

<div class="container">

    <form class="needs-validation" action="/addproduct" method="post"> <!-- novalidate> -->
        <div class="form-group">
            <div class="col-6">
                <label for="inputName">Product</label>
                <input type="text" class="form-control" name="inputName" placeholder="Enter Product Name"  maxlength="255" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid product name.
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-6">
                <label for="selectCategory">Category</label>
                <select class="form-control" name="selectCategory" required>
                    <option>Food</option>
                    <option>Drink</option>
                    <option>Space</option>
                    <option>Ocean</option>
                    <option>Subterranean</option>
                </select>
            </div>
        </div>
                <div class="form-group">
            <div class="col-6">
                <label for="quantityID">Initial Quantity</label>
                <input type="number" class="form-control" name="quantityID" placeholder="Enter how much youre adding to stock now (can be 0)" maxlength="10" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a Quantity.
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-6">

                <label for="weightID">Weight</label>
                <input type="number" class="form-control" name="weightID" placeholder="Enter Weight Information" maxlength="11" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a valid weight.
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-6">
                <label for="descriptionID">Product Description</label>
                <input type="text" class="form-control" name="descriptionID" placeholder="Enter a Description" maxlength="500" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a brief description of the product.
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-6">
                <label for="wholesaleID">Wholesale Price</label>
                <input type="number" class="form-control" name="wholesaleID" placeholder="Enter the amount spent per unit" maxlength="10" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a wholesale price.
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-6">
                <label for="retailID">Retail Price</label>
                <input type="number" class="form-control" name="retailID" placeholder="Enter how much this item is sold for" maxlength="10" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Please provide a sale price.
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-secondary" disabled>Clear</button>
        <button type="submit" class="btn btn-primary">Submit</button>        
        <!-- <button type="button" class="btn btn-secondary">Clear Fields</button> -->

    </form>
    <br>
    <div class="row">
        <div class="col-md-6 mt-4 text center">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">ProductId</th>
                        <th scope="col">Name</th>
                        <th scope="col">Size</th>
                        <th scope="col">Quantity</th>
                        <th scope="col">Description</th>
                        <th scope="col">Category</th>
                    </tr>
                </thead>
                <tbody>

                    <tr>
                        <th scope="row">1</th>
                        <td>Apples</td>
                        <td>Size</td>
                        <td>Quantity</td>
                        <td>Description</td>
                        <td>Category</td>
                </tbody>
            </table>
        </div>
    </div>
</div>


{{> footer-end }}